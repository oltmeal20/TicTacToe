   <children>
      <Label text="Tic - Tac - Toe">
         <font>
            <Font name="Copperplate Gothic Bold" size="48.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" onAction="#x3ButtonPressed" prefWidth="300.0" text="3 X 3" fx:id="x3Button">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#x4ButtonPressed" prefWidth="300.0" text="4 X 4" fx:id="x4Button">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#x5ButtonPressed" prefWidth="300.0" text="5 X 5" fx:id="x5Button">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="instructionsButton" mnemonicParsing="false" onAction="#instructionsButtonPressed" text="Instructions">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeButtonPressed" text="Close" GridPane.columnIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
